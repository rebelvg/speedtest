{
  "name": "speedtest",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "api",
    "app"
  ],
  "scripts": {
    "test": "yarn workspace api run test",
    "prepush": "yarn run prettier",
    "prettier": "prettier \"**/*\" --list-different --ignore-unknown",
    "prettier:fix": "prettier \"**/*\" --write --ignore-unknown",
    "build:app": "yarn workspace app run build",
    "start:app": "yarn workspace app run start",
    "build:api": "yarn workspace api run build",
    "start:api": "yarn workspace api run start",
    "start": "concurrently --kill-others \"yarn run start:api\" \"yarn run start:app\"",
    "pm2:setup": "pm2 start pm2.json",
    "pm2": "yarn install && pm2 restart speedtest"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.0",
    "chai": "^4.2.0",
    "concurrently": "^3.5.1",
    "mocha": "^8.2.0",
    "prettier": "^2.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0"
  },
  "dependencies": {}
}
